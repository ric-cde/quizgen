{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
    // gradual typing (JS-first)
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": false, // true in future
    "noImplicitAny": false, // true in future
    "skipLibCheck": true,

    // shadcn/ui install
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
